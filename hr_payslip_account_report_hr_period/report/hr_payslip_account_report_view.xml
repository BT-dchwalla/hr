<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record model="ir.ui.view"
                id="hr_payslip_account_report_tree">
            <field name="name">hr.payslip.account.report.tree</field>
            <field name="model">hr.payslip.account.report</field>
            <field name="inherit_id"
                   ref="hr_payslip_account_report.hr_payslip_account_report_tree"/>
            <field name="arch" type="xml">
                <field name="date_to" position="after">
                    <field name="hr_period_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="hr_payslip_account_report_search">
            <field name="name">hr.payslip.account.report.search</field>
            <field name="model">hr.payslip.account.report</field>
            <field name="inherit_id"
                   ref="hr_payslip_account_report.hr_payslip_account_report_search"/>
            <field name="arch" type="xml">
                <field name="date_to" position="after">
                    <field name="hr_period_id"/>
                </field>
                <group name="group_by" position="inside">
                        <filter string="Payroll Period"
                                name="group_hr_period_id"
                                domain="[]"
                                context="{'group_by':'hr_period_id'}"/>
                </group>

            </field>
        </record>

        <record model="ir.ui.view"
                id="hr_payslip_account_report_form">
            <field name="name">hr.payslip.account.report.form</field>
            <field name="model">hr.payslip.account.report</field>
            <field name="inherit_id"
                   ref="hr_payslip_account_report.hr_payslip_account_report_form"/>
            <field name="arch" type="xml">
                <field name="date_to" position="after">
                    <field name="hr_period_id"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
